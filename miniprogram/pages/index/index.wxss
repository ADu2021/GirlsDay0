/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.helloworld{
  /* margin-top: 400px; */
  display: flex;
  align-items: center;
  height:150rpx;
  flex-direction: column;
}

.helloworld .title{
  font-style: oblique;
  font-size: 45rpx; 
}


.context{
  display: flex;
  padding: 80rpx;
  flex-direction: column;    
  /* flex-direction 默认是横排 */
}





.context .body{
  font-size : 50rpx;
  color : #008cff;
}

.context .black_text{
  color : rgb(0, 0, 0);
}

.context .long_text{
  color :rgb(238, 255, 0);
}

.background{
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100%;
  z-index: -1;
}